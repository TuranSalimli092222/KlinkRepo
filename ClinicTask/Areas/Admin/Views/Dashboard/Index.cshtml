@using ClinicTask.Models
@model List<Department>
           <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="table-responsive pt-3">
                                    <table class="table table-striped project-orders-table">
                                        <thead>
                                            <tr>
                                                
                                                <th>Id</th>
                                                <th>Title</th>
                                                <th>Doctor Count</th>
                                           
                                            </tr>
                                        </thead>
                                        <tbody>
                                          
                        @foreach (Department department in Model)
                        {
                            <tr>
                                <td>@department.Id</td>
                                <td>@department.Title </td>
                                <td>@department.Doctors.Count</td>
                                <td><a class="btn btn-danger" asp-area="Admin"asp-controller="Dashboard"asp-action="Delete"asp-route-id="@department.Id">Delete</a></td>
                                <td><a class="btn btn-success" asp-area="Admin" asp-controller="Dashboard" asp-action="Update" asp-route-id="@department.Id">Edit</a></td>
                                <td><a class="btn btn-warning" asp-area="Admin" asp-controller="Dashboard" asp-action="AssignDepartments" asp-route-id="@department.Id">Assign Department</a></td>


                               
                              
                            </tr>
                        }
                    </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                
                <!-- content-wrapper ends -->
		
